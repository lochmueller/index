{
  "name": "lochmueller/index",
  "type": "typo3-cms-extension",
  "description": "Index - Smart and flexible async indexing of pages and documents for e.g. search engines or AI provider",
  "license": "GPL-2.0-or-later",
  "keywords": [
    "typo3",
    "index",
    "indexing",
    "traversing",
    "search"
  ],
  "autoload": {
    "psr-4": {
      "Lochmueller\\Index\\": "Classes/"
    }
  },
  "require": {
    "php": "^8.3",
    "typo3/cms-core": "^13.4",
    "typo3/cms-frontend": "^13.4",
    "typo3/cms-backend": "^13.4",
    "typo3/cms-reactions": "^13.4",
    "typo3/cms-webhooks": "^13.4"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.84",
    "phpstan/phpstan": "^2.1",
    "b13/container": "^3.1"
  },
  "suggest": {
    "phpoffice/phpspreadsheet": "For file extraction process of Excel files.",
    "phpoffice/phppresentation": "For file extraction process of Powerpoint files.",
    "phpoffice/phpword": "For file extraction process of Word files.",
    "smalot/pdfparser": "For file extraction process of PDF files."
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "index",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web"
    }
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/cms-composer-installers": true,
      "typo3/class-alias-loader": true
    }
  },
  "scripts": {
    "code-fix": [
      "@php-cs-fixer",
      "@phpstan"
    ],
    "phpstan": ".Build/bin/phpstan analyse Classes --memory-limit 1G --level 3",
    "php-cs-fixer": ".Build/bin/php-cs-fixer fix Classes --rules=@PER-CS3.0:risky,@PER-CS3.0,declare_strict_types,no_unused_imports --allow-risky yes"
  }
}
